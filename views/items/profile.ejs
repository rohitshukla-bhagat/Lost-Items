<% layout("/layouts/commonPage.ejs") %>
<form action="/profile/<%= currUser._id %>" method="post">
  <div class="container formContainer1">
    <div class="row loginContainer">
      <div class="col-md-4 offset-md-4">
        <h1 class="text-center">Edit Your Details</h1>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="user[username]"
            value="<%= currUser.username %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="user[name]"
            value="<%= currUser.name %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="user[email]"
            value="<%= currUser.email %>"
            required
          />
        </div>
        <div class="loginButtom">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </div>
  </div>
</form>
